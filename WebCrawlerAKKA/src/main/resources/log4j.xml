<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">
<log4j:configuration debug="false" xmlns:log4j="http://jakarta.apache.org/log4j/">

    <!-- Appenders -->
    <appender name="consoleAppender" class="org.apache.log4j.ConsoleAppender">
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="%d{dd.MM.yyyy HH:mm:ss} %5p %c{2} - %m%n"/>
        </layout>
    </appender>

    <appender name="fileAppenderApp" class="org.apache.log4j.RollingFileAppender">
        <param name="append" value="false"/>
        <param name="file" value="logs/webCrawler.log"/>
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="%d{dd.MM.yyyy HH:mm:ss} %5p %c - %m%n"/>
        </layout>
    </appender>

    <appender name="fileAppenderActors" class="org.apache.log4j.RollingFileAppender">
        <param name="append" value="false"/>
        <param name="file" value="logs/webCrawlerActors.log"/>
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="%d{dd.MM.yyyy HH:mm:ss} %5p %c - %m%n"/>
        </layout>
    </appender>

    <!-- Specific setup for packages -->
    <logger name="com.en_workshop.webcrawlerakka.akka">
        <level value="DEBUG"/>
        <appender-ref ref="fileAppenderActors"/>
    </logger>
    <logger name="c.e.w.a.a.p">
        <level value="DEBUG"/>
        <appender-ref ref="fileAppenderActors"/>
    </logger>

    <logger name="com.en_workshop.webcrawlerakka">
        <level value="DEBUG"/>
    </logger>

    <!-- Root setup -->
    <root>
        <level value="WARN"/>
        <appender-ref ref="consoleAppender"/>
        <appender-ref ref="fileAppenderApp"/>
    </root>

</log4j:configuration>